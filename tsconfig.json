{
	"compilerOptions": {
		"module": "commonjs",
		"strict": true,
		"outDir": "build",
		"removeComments": true,
		"experimentalDecorators": true,
		"target": "es6",
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"types": ["node", "jest"],
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["./server/**/*"],
	"exclude": ["./bin/"]
}
